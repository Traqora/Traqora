{
  "dashboard": {
    "title": "Traqora - Business Metrics",
    "tags": ["traqora", "business"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Bookings Created (24h)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "increase(traqora_bookings_created_total[24h])",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "green", "value": 50 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Bookings Confirmed (24h)",
        "type": "stat",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "increase(traqora_bookings_confirmed_total[24h])",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "green", "value": 50 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Revenue (24h)",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "increase(traqora_booking_revenue_cents_total[24h]) / 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 1000 },
                { "color": "green", "value": 10000 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Booking Failure Rate",
        "type": "stat",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(traqora_bookings_failed_total[5m]) / rate(traqora_bookings_created_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Bookings by Airline",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(traqora_bookings_created_total[5m])",
            "legendFormat": "{{airline}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Bookings/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "title": "Revenue by Airline (24h)",
        "type": "piechart",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "increase(traqora_booking_revenue_cents_total[24h])",
            "legendFormat": "{{airline}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Refund Requests",
        "type": "graph",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(traqora_refunds_requested_total[5m])",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Refunds/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 8,
        "title": "Refund Processing Time (p95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(traqora_refund_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "{{airline}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 9,
        "title": "Active Disputes",
        "type": "graph",
        "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "traqora_active_disputes",
            "legendFormat": "{{phase}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Disputes" },
          { "format": "short" }
        ]
      },
      {
        "id": 10,
        "title": "Dispute Resolution Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(traqora_disputes_resolved_total[5m])",
            "legendFormat": "{{verdict}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Resolutions/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 11,
        "title": "Booking Processing Duration (p95)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(traqora_booking_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "{{airline}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 12,
        "title": "Stripe Payment Success Rate",
        "type": "stat",
        "gridPos": { "x": 12, "y": 28, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(traqora_stripe_payments_total{status=\"succeeded\"}[5m]) / rate(traqora_stripe_payments_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 95 },
                { "color": "green", "value": 99 }
              ]
            }
          }
        }
      }
    ]
  }
}
